---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { ContentBlock, Button, Box, RoundButton, ContactForm } from '../../components/ui';
import RecommendationsCarousel from '../../components/Carousel.tsx';
import { socialIcon } from '../../styles/styles';


export function getStaticPaths() {
  return [
    { params: { lang: 'he' } },
    { params: { lang: 'en' } },
  ];
}

interface Params {
  lang: 'he' | 'en';
}

const { params } = Astro;
const lang = (params as Params).lang;

const texts = {
  he: {
    pageTitle: 'עמוד הבית',
        heroTitle: 'כרמל אבני - מורה דרך',

    aboutTitle: 'אודות',
    
    aboutText:       'שמי כרמל, ואני הפנים שמאחורי שביליטו.',
    aboutButton: 'עוד עליי',
    servicesTitle: 'הטיולים שלנו',
    servicesText: "מסלולים וחוויות לכל גיל",
    servicesButton: 'לפרטים נוספים',
        routesTitle: 'מסלולים מומלצים',
    routesText: "טיולי משפחות ועוד!",
    routesButton: 'לפרטים נוספים',
  },
  en: {
    pageTitle: 'Home Page',
        heroTitle: 'Carmel Avni - Tour Guide',
    aboutTitle: 'About',
    aboutText: 'My name is Carmel, and I am the face behind Shvilito.',
    aboutButton: 'Learn More About Me',
    servicesTitle: 'Our Trips',
    servicesText: "Adventures and Experiences for Everyone",
    servicesButton: 'More Info',
        routesTitle: 'Recommended Routes',
    routesText: "Visit Nature with your Family",
    routesButton: 'More Info',
  },
};

const t = texts[lang];
---

<BaseLayout pageTitle={t.pageTitle} lang={lang} dir={lang === 'he' ? 'rtl' : 'ltr'}>
  
<section class="relative  w-full overflow-hidden flex items-center justify-center">
  <!-- Video background -->
  <video 
    class="absolute inset-0 w-full h-full object-cover"
    autoplay 
    muted 
    loop 
    playsinline
  >
    <source src="/water.mp4" type="video/mp4" />
    Your browser does not support the video tag.
  </video>
  <div class="absolute inset-0 bg-gradient-to-b from-transparent to-white" />

  <!-- Overlay content -->
  <div class="relative z-10 flex flex-col items-center justify-center text-center gap-6 px-4">
    <img src="/logotrans.png" alt="Logo" class="w-40 md:w-60" />

    <h1 class="text-white text-3xl sm:text-4xl md:text-6xl font-bold drop-shadow-lg">
      {t.heroTitle}
    </h1>

    <div class="flex flex-wrap justify-center gap-4 mt-4">
      <RoundButton 
        text="/Instagram_Glyph_Black.svg" 
        href="https://www.instagram.com/shvilito_tours/" 
        className="w-12 h-12 md:w-16 md:h-16" 
      />
      <RoundButton 
        text="/facebook.svg" 
        href="https://www.facebook.com/Shvilito.tours"
        className="w-12 h-12 md:w-16 md:h-16"
      />
      <RoundButton 
        text="/Digital_Glyph_Black.svg" 
        href="https://wa.me/c/972507235363"
        className="w-12 h-12 md:w-16 md:h-16"
      />
      <RoundButton 
        text="/email.svg" 
        href="mailto:melavni@gmail.com"
        className="w-12 h-12 md:w-16 md:h-16"
      />
    </div>
  </div>
</section>



  <!-- קונטיינר אודות -->
  <ContentBlock
    title={t.aboutTitle}
    text={t.aboutText}
    imageSrc="/hi.jpg"
    imageAlt={t.aboutTitle}
    buttonText={t.aboutButton}
    buttonHref={`/${lang}/about`}
  />

  <!-- קונטיינר שירותים -->
  <ContentBlock
    title={t.servicesTitle}
    text={t.servicesText}
    imageSrc="/hi.jpg"
    imageAlt={t.servicesTitle}
    buttonText={t.servicesButton}
    buttonHref={`/${lang}/trips`}
    reverse={true}
  />
  <ContentBlock
    title={t.routesTitle}
    text={t.routesText}
    imageSrc="/hi.jpg"
    imageAlt={t.routesTitle}
    buttonText={t.routesButton}
    buttonHref={`/${lang}/routes`}
    reverse={true}
  />

<section class="mt-16 bg-[#f5eee7]">
  <h2 class="text-3xl font-bold text-center mb-6">
    {lang === "he" ? "המלצות" : "Recommendations"}
  </h2>
  <RecommendationsCarousel client:only="react" lang={lang} />
</section>




<section class="max-w-xl mx-auto px-4 py-12">
    <h1 class="text-3xl font-bold mb-6 text-center">{lang === 'he' ? 'צרו קשר' : 'Contact Us'}</h1>
    <ContactForm  lang={lang} client:only="react" />
  </section>
</BaseLayout>
