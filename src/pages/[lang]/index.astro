---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { ContentBlock, Button, Box } from '../../components/ui';
import RecommendationsCarousel from '../../components/Carousel.tsx';
import { socialIcon } from '../../styles/styles';


export function getStaticPaths() {
  return [
    { params: { lang: 'he' } },
    { params: { lang: 'en' } },
  ];
}

interface Params {
  lang: 'he' | 'en';
}

const { params } = Astro;
const lang = (params as Params).lang;

const texts = {
  he: {
    pageTitle: '注 转',
        heroTitle: '专  - 专 专',

    aboutTitle: '转',
    
    aboutText:       '砖 专,  驻 砖专 砖.',
    aboutButton: '注 注',
    servicesTitle: ' 砖',
    servicesText: "住 转  ",
    servicesButton: '驻专 住驻',
  },
  en: {
    pageTitle: 'Home Page',
        heroTitle: 'Carmel Avni - Tour Guide',
    aboutTitle: 'About',
    aboutText: 'My name is Carmel, and I am the face behind Shvilito.',
    aboutButton: 'Learn More About Me',
    servicesTitle: 'Our Trips',
    servicesText: "Adventures and Experiences for Everyone",
    servicesButton: 'More Info',
  },
};

const t = texts[lang];
---

<BaseLayout pageTitle={t.pageTitle} lang={lang} dir={lang === 'he' ? 'rtl' : 'ltr'}>
  
    <!--  Hero Section with Video -->
  <section class="relative h-[70vh] w-full overflow-hidden">
    <!-- Video background -->
    <video 
      class="absolute top-0 left-0 w-full h-full object-cover"
      autoplay 
      muted 
      loop 
      playsinline
    >
      <source src="/water.mp4" type="video/mp4" />
      Your browser does not support the video tag.
    </video>
    <div class="absolute inset-0 bg-gradient-to-b from-transparent to-white" />

    <!-- Overlay for fade effect -->

    <!-- Title text centered -->
    <div class="relative z-10 flex flex-col gap-12 items-center justify-center h-full">
      <h1 class="text-white text-4xl md:text-6xl font-bold text-center drop-shadow-lg">
        {t.heroTitle}
      </h1>
   <div class="flex flex-row gap-2">
                  <a href="https://www.instagram.com/shvilito_tours/"><img src="/Instagram_Glyph_Black.svg" alt="Instagram" class="w-16 h-16" /></a>
        <a href="https://www.facebook.com/Shvilito.tours"><img src="/facebook.svg" alt="Facebook" class="w-16 h-16"  /></a>
        <a href="https://wa.me/c/972507235363"><img src="/Digital_Glyph_Black.svg" alt="Whatsapp" class="w-16 h-16"  /></a>
                <a href="mailto:melavni@gmail.com"><img src="/email.svg" alt="email" class="w-16 h-16"  /></a>
                </div>
    </div>

  </section>

  <!-- 拽专 转 -->
  <ContentBlock
    title={t.aboutTitle}
    text={t.aboutText}
    imageSrc="/hi.jpg"
    imageAlt={t.aboutTitle}
    buttonText={t.aboutButton}
    buttonHref={`/${lang}/about`}
  />

  <!-- 拽专 砖专转 -->
  <ContentBlock
    title={t.servicesTitle}
    text={t.servicesText}
    imageSrc="/hi.jpg"
    imageAlt={t.servicesTitle}
    buttonText={t.servicesButton}
    buttonHref={`/${lang}/trips`}
    reverse={true}
  />

<section class="mt-16 bg-[#f5eee7]">
  <h2 class="text-3xl font-bold text-center mb-6">
    {lang === "he" ? "爪转" : "Recommendations"}
  </h2>
  <RecommendationsCarousel client:only="react" lang={lang} />
</section>



  <!--  住驻转 砖 拽专 驻砖 注 Box  -->
  <Box className="text-center mt-12 bg-[#f5eee7]">
    <h2 class="text-3xl font-bold mb-4">{lang === 'he' ? '爪注 ' : 'Special Offer'}</h2>
    <p class="text-gray-700">{lang === 'he' ? '专 ,  专 !' : 'Special pricing for the holiday!'}</p>
    <Button text={lang === 'he' ? '拽 注砖' : 'Buy Now'} href={`/${lang}/shop`} />
  </Box>

</BaseLayout>
