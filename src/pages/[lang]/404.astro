---
import BaseLayout from "../../layouts/BaseLayout.astro";
export function getStaticPaths() {
  return [
    { params: { lang: 'he' } },
    { params: { lang: 'en' } },
  ];
}
const lang = (Astro.params.lang === "en" || Astro.params.lang === "he")
  ? Astro.params.lang
  : "he";

const t = {
  he: {
    title: "404",
    message: "אופס! העמוד שחיפשת לא נמצא.",
    back: "חזרה לעמוד הבית",
  },
  en: {
    title: "404",
    message: "Oops! The page you are looking for doesn’t exist.",
    back: "Back to Homepage",
  },
}[lang];
---

<BaseLayout pageTitle={t.title} lang={lang} dir={lang === "he" ? "rtl" : "ltr"}>
  <section class="flex flex-col items-center justify-center min-h-[70vh] px-4 py-12 text-center">
    <h1 class="text-5xl md:text-7xl font-bold text-[#d4a373] mb-6">{t.title}</h1>
    <p class="text-gray-600 text-lg mb-8 max-w-xl">{t.message}</p>
    <a 
      href={`/${lang}/`} 
      class="inline-block bg-[#d4a373] text-white font-semibold px-6 py-3 rounded-2xl shadow-md hover:bg-[#b88358] transition"
    >
      {t.back}
    </a>
  </section>
</BaseLayout>
